<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ciudad</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Direccion</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.firstName, client %></td>
        <td><%= client.city %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.address %></td>
        <td><%= link_to 'Editar', edit_client_path(client), :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_client_path, :class=>"btn btn-success" %>

